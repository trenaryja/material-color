{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES5",
		"module": "ES2015",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"strict": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src"]
}
